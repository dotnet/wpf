                                </MultiDataTrigger.Conditions>
                                <Setter TargetName="PART_HeaderButton" Property="ControlSizeDefinition">
                                    <Setter.Value>
                                        <ribbon:RibbonControlSizeDefinition ImageSize="Small" IsLabelVisible="False" />
                                    </Setter.Value>
                                </Setter>
