    </PreparePackageAssetsDependsOn>
  </PropertyGroup>

  <Target Name="CopySystemPrintingReferenceAssemblyToReferenceAssemblyDir">
    <PropertyGroup>
      <SystemPrintingRefDll>@(SystemPrintingRefDlls)</SystemPrintingRefDll>
    </PropertyGroup>
    
    <Copy SourceFiles="$(SystemPrintingRefDll)"
          DestinationFolder="$(ReferenceAssemblyDir)"
          Condition="!Exists('$(ReferenceAssemblyDir)$(SystemPrintingRefDll)')" />
  </Target>

