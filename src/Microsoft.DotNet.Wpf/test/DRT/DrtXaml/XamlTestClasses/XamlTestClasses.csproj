<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AssemblyName>XamlTestClasses</AssemblyName>
    <RootNamespace>XamlTestClasses</RootNamespace>
    <Platforms>AnyCPU;x64</Platforms>
  </PropertyGroup>
  
  <PropertyGroup>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>DrtXaml.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\XamlTestClasses.FriendWithKey\XamlTestClasses.FriendWithKey.csproj" />
    <ProjectReference Include="..\XamlTestClasses.FriendWithoutKey\XamlTestClasses.FriendWithoutKey.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- 
      System.Xaml in Microsoft.DotNet.Wpf.DncEng will be superseded by the project reference
    -->
    <ProjectReference Include="$(WpfSourceDir)System.Xaml\System.Xaml.csproj" />
  </ItemGroup>
</Project>
