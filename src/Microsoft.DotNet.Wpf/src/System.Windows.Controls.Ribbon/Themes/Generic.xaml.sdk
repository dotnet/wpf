                        <Setter TargetName="HighlightRightBorder" Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                        <Setter TargetName="PART_SideBarBorder" Property="BorderBrush" Value="Transparent" />
